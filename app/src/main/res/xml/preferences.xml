<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory
        android:key="@string/name"
        android:title="USER">

        <EditTextPreference
            android:dialogTitle="Votre pseudo"
            android:dialogMessage="Entrez votre pseudo"
            android:inputType="textCapWords"
            android:key="key_full_name"
            android:title="@string/name"
            android:summary="Fabien">
        </EditTextPreference>

        <EditTextPreference
            android:dialogTitle="Votre adresse e-mail"
            android:dialogMessage="Entrez votre adresse e-mail"
            android:inputType="textCapWords"
            android:key="key_email"
            android:title="@string/mail"
            android:summary="niquealgo">
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="PLAYER">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="enable_timer"
            android:title="Enable sleep timer"
            android:summary="Enable">
        </CheckBoxPreference>

        <ListPreference
            android:dependency="enable_timer"
            android:key="key_sleep_timer"
            android:title="Sleep timer"
            android:summary="Stop playing music after some time"
            android:entries="@array/timerList"
            android:entryValues="@array/timerListValues">
        </ListPreference>

        <ListPreference
            android:key="key_music_quality"
            android:title="Music Quality"
            android:entries="@array/timerListValues"
            android:entryValues="@array/musicQualityValues">
        </ListPreference>

        <MultiSelectListPreference
            android:dialogTitle="Select all your options"
            android:key="music_type"
            android:title="Types of music"
            android:summary="Press to show list"
            android:entries="@array/typesOfMusic"
            android:entryValues="@array/typesOfMusicValues">
        </MultiSelectListPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="OTHER">

        <SwitchPreference
            android:key="enable_notification"
            android:editable="true"
            android:title="Push notifications">
        </SwitchPreference>

        <RingtonePreference
            android:key="key_notification_ringtone"
            android:title="Notification_ringtone"
            android:summary="Choose notification sound"
            android:ringtoneType="notification"
            android:dependency="enable_notification">

        </RingtonePreference>
    </PreferenceCategory>
</PreferenceScreen>